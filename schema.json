{
  "type": "object",
  "properties": {
    "image": {
      "type": "object",
      "properties": {
        "repository": { "type": "string", "pattern": "^([a-zA-Z0-9]+.){2}[a-zA-Z0-9]+(\/([a-zA-Z0-9]+(-|_)?)+)+$" },
        "tag": { "type": "string", "pattern": "^(t-)?(d-)?(m-)?(([0-9]+.)+[0-9]+(-)?)?([a-z0-9]{8})?$" },
        "pullPolicy": { "type": "string", "enum": ["IfNotPresent", "Always", "Never"] },
        "pullSecrets": { "type": "array" }
      },
      "required": ["repository", "tag"]
    },
    "app": {
      "type": "object",
      "properties": {
        "kind": { "type": "string", "enum": ["Deployment", "StatefulSet"] },
        "replicas": { "type": "integer", "minimum": 1, "maximum": 10 },
        "containers": { "type": "array" },
        "command": { "type": "array" },
        "args": { "type": "array" },
        "prometheusScrapePort": { "type": "integer", "minimum": 1, "maximum": 65535 },
        "annotations": { "type": "object" },
        "podAnnotations": { "type": "object" },
        "healthcheck": { "type": "object" }
      },
      "required": ["kind", "replicas"],
      "if": {
        "properties": {
          "healthcheck": { "not": { "type": "object" } }
        }
      },
      "then": {
        "properties": {
          "healthcheck": {
            "properties": {
              "liveness": { "type": "object" },
              "readiness": { "type": "object" }
            }
          }
        }
      }
    },
    "ingress": {
      "type": "object",
      "properties": {
        "enabled": { "type": "boolean" },
        "annotations": { "type": "object" },
        "hosts": { "type": "array", "items": { "type": "object" } }
      },
      "if": {
        "properties": {
          "enabled": { "const": true }
        }
      },
      "then": {
        "required": ["hosts"],
        "properties": {
          "hosts": {
            "prefixItems": [
              {
                "properties": {
                  "host": { "type": "string" },
                  "paths": { "type": "array" }
                },
                "required": ["host", "paths"]
              }
            ]
          }
        }
      }
    },
    "resources": {
      "type": "object",
      "properties": {
        "limits": {
          "type": "object",
          "properties": {
            "cpu": { "type": ["string", "number"], "enum": ["100m", "250m", "500m", "750m", 1, 1.5, 2, 2.5, 3, 3.5, 4] },
            "memory": { "type": "string", "enum": ["128Mi", "256Mi", "512Mi", "1Gi", "1.5Gi", "2Gi", "3Gi", "4Gi", "6Gi", "8Gi"] }
          }
        },
        "requests": {
          "type": "object",
          "properties": {
            "cpu": { "type": ["string", "number"], "enum": ["100m", "250m", "500m", "750m", 1, 1.5, 2, 2.5, 3, 3.5, 4] },
            "memory": { "type": "string", "enum": ["128Mi", "256Mi", "512Mi", "1Gi", "1.5Gi", "2Gi", "3Gi", "4Gi", "6Gi", "8Gi"] }
          }
        }
      }
    },
    "service": {
      "type": "object",
      "properties": {
        "type": { "type": "string", "enum": ["ClusterIP", "NodePort", "LoadBalancer", "ExternalName"] },
        "serviceNames": { "type": "array" }
      }
    },
    "autoscaling": {
      "type": "object",
      "properties": {
        "enabled": { "type": "boolean" },
        "min": { "type": "integer", "minimum": 1, "maximum": 10 },
        "max": { "type": "integer", "minimum": 1, "maximum": 20 },
        "metrics": { "type": "array", "items": { "type": "object" } }
      },
      "if": {
        "properties": { "enabled": { "const": true } }
      },
      "then": {
        "required": ["min", "max", "metrics"],
        "properties": {
          "metrics": {
            "prefixItems": [
              {
                "properties": {
                  "type": { "type": "string" },
                  "resource": {
                    "type": "object",
                    "properties": {
                      "name": { "type": "string", "enum": ["cpu","memory"] },
                      "target": { "type": "object" }
                    }
                  }
                },
                "required": ["type", "resource"]
              }
            ]
          }
        }
      }

    },
    "serviceMonitor": { "type": "object" },
    "volumes": { "type": "array" },
    "volumeMounts": { "type": "array" },
    "configMaps": { "type": "array" },
    "volumeDevices": { "type": "array" },
    "env": { "type": "array" },
    "envFrom": { "type": "array" }
  }
}